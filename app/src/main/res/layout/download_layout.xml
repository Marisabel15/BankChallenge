<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/down_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="100dp">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="19dp"
    >

    <ImageButton
        android:id="@+id/setadownload"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/setadownload"
        />

    <TextView
        android:id="@+id/baixar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/dinneuzeitgroteskstd_light"
        android:textColor="@color/colorDarkRed"
        android:text="Baixar"
        android:textSize="14sp"

        />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/setadownload_1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setadownload"
            />

        <TextView
            android:id="@+id/baixar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/dinneuzeitgroteskstd_light"
            android:textColor="@color/colorDarkRed"
            android:text="Baixar"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="21dp">

        <ImageButton
            android:id="@+id/setadownload_2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setadownload"
            />

        <TextView
            android:id="@+id/baixar_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/dinneuzeitgroteskstd_light"
            android:textColor="@color/colorDarkRed"
            android:text="Baixar"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="22dp">

        <ImageButton
            android:id="@+id/setadownload_3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setadownload"
            />

        <TextView
            android:id="@+id/baixar_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/dinneuzeitgroteskstd_light"
            android:textColor="@color/colorDarkRed"
            android:text="Baixar"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="23dp">

        <ImageButton
            android:id="@+id/setadownload_4"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/setadownload"
            />

        <TextView
            android:id="@+id/baixar_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/dinneuzeitgroteskstd_light"
            android:textColor="@color/colorDarkRed"
            android:text="Baixar"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>

</LinearLayout>